generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      Tags[]

  @@map("projects")
}

model Tags {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?

  @@map("tags")
}

model Pages {
  id       Int    @id @default(autoincrement())
  title    String
  title_h1 String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("pages")
}

model Features {
  id          Int      @id @default(autoincrement())
  num         String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("features")
}

model Stage {
  id          Int      @id @default(autoincrement())
  num         String
  title       String
  description String
  duration    String
  cost        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("stages")
}
